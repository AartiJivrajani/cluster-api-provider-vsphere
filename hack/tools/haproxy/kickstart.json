{
  "hostname": "localhost",
  "password": {
    "crypted": false,
    "text": "photon"
  },
  "disk": "/dev/sda",
  "packages": [
    "initramfs",
    "linux",
    "minimal"
  ],
  "additional_packages": [
    "bash",
    "ca-certificates",
    "curl",
    "gzip",
    "haproxy",
    "jq",
    "lsof",
    "lvm2",
    "ntp",
    "openssh-server",
    "open-vm-tools",
    "sed",
    "shadow",
    "sudo",
    "tar",
    "vim"
  ],
  "postinstall": [
    "#!/bin/bash",
    "tdnf install -y bash ca-certificates curl gzip haproxy jq lsof lvm2 ntp openssh-server open-vm-tools sed shadow sudo tar vim",
    "useradd -U --groups wheel photon && echo 'photon:photon' | chpasswd",
    "mkdir -p /home/photon",
    "chown -R photon:photon /home/photon",
    "echo 'photon ALL=(ALL) NOPASSWD: ALL' >/etc/sudoers.d/photon",
    "chmod 440 /etc/sudoers.d/photon",
    "useradd --system --home-dir=/var/lib/haproxy --user-group haproxy",
    "mkdir -p /var/lib/haproxy",
    "chown -R haproxy:haproxy /var/lib/haproxy",
    "systemctl disable docker.service",
    "systemctl mask docker.service",
    "systemctl enable sshd.service",
    "systemctl enable haproxy.service",
    "tdnf clean all"
  ]
}